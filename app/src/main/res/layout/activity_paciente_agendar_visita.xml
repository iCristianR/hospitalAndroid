<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Paciente.Paciente_AgendarVisita">


    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="120dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/textView92"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Información Paciente"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:paddingTop="10dp"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cedula"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtPAgenCedula"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView89"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre y Apellido"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtPAgenNombre"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="120dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/textView93"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Información Medico"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:paddingTop="10dp"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre y Apellido"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtPAgenMedico"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView95"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Especialidad"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/txtPAgenEspe"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edittext"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="190dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView96"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="Información Visita"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:paddingTop="10dp"
                android:rowCount="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView98"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ID"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/txtPAgenId"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView99"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Fecha"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/txtPAgenFecha"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />
                </LinearLayout>

            </GridLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hora"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinnerPAgenHora"
                android:layout_width="170dp"
                android:layout_height="40dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>