<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="26dp"
    tools:context=".Admin.Admin_Restablecer">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/contra" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="RECUPERACION CONTRASEÑA"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtRCorreoAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese E-Mail"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija pregunta de seguridad:"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinnerRPreguntasAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtRRespuestaAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Respuesta"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnRContraAdm"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="RECUPERAR"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/lblRContraAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asigne una nueva contraseña:"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtRContraAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese una nueva contraseña"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtRContraConfAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirme la contraseña"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btnRGuardarAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:textStyle="bold" />
</LinearLayout>